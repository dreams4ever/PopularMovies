<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#4e5fc9"
        android:id="@+id/linear_title"
        >
<TextView
    android:id="@+id/film_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="30sp"
    android:text="The beauty and the beast"
    android:layout_gravity="center"
    android:textColor="#f9f8f8"
    android:fontFamily="sans-serif-condensed"
    android:layout_marginLeft="20dp"/>
    </LinearLayout>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/linear_title"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="20dp"
    android:id="@+id/linear_poster"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/film_poster"
        android:layout_marginRight="20dp"/>
        <TextView
            android:id="@+id/film_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:text="2015"
            android:textSize="25sp"
            android:layout_toRightOf="@id/film_poster"
            android:layout_marginBottom="8dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/film_duration"
            android:text="120 min"
            android:textStyle="italic"
            android:textSize="20sp"
            android:layout_below="@id/film_date"
            android:layout_toRightOf="@id/film_poster"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/film_rate"
        android:text="8.5/10"
        android:textSize="15sp"
        android:layout_below="@id/film_duration"
        android:layout_toRightOf="@id/film_poster"
        android:textColor="#000"
        android:layout_marginLeft="13dp"
        />
    <Button
        android:id="@+id/favorite_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/film_rate"
        android:layout_toRightOf="@id/film_poster"
        android:text="Mark as
favorite"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/film_overview"
        android:layout_below="@id/favorite_bt"
        android:layout_marginTop="20dp"
        android:text="Overview"
        android:textSize="20sp"
        />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#aeadad"
        android:layout_below="@id/linear_poster"
        android:layout_marginTop="5dp"
        />

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear_poster"
        >
        <TextView
            android:text="Trailers:"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="25sp"
            android:id="@+id/trailer"
            />
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/list_view"
            android:layout_below="@id/trailer"
            >
        </ListView>
    </RelativeLayout>

</RelativeLayout>